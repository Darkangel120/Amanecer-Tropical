<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.DashboardController" style="-fx-background-color: #f0f0f0;">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #4CAF50; -fx-padding: 10;">
            <children>
                <Label text="Amanecer Tropical - Panel de Administración" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="logoutButton" text="Cerrar Sesión" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="usersTab" text="Usuarios">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 20;">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button text="Agregar Usuario" onAction="#handleAddUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                                        <Button text="Editar Usuario" onAction="#handleEditUser" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                                        <Button text="Eliminar Usuario" onAction="#handleDeleteUser" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                                    </children>
                                </HBox>
                                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="userIdColumn" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="userNameColumn" text="Nombre" prefWidth="150.0" />
                                        <TableColumn fx:id="userEmailColumn" text="Email" prefWidth="200.0" />
                                        <TableColumn fx:id="userRoleColumn" text="Rol" prefWidth="100.0" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="destinationsTab" text="Destinos">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 20;">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button text="Agregar Destino" onAction="#handleAddDestination" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                                        <Button text="Editar Destino" onAction="#handleEditDestination" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                                        <Button text="Eliminar Destino" onAction="#handleDeleteDestination" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                                    </children>
                                </HBox>
                                <TableView fx:id="destinationTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="destinationIdColumn" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="destinationNameColumn" text="Nombre" prefWidth="200.0" />
                                        <TableColumn fx:id="destinationDescriptionColumn" text="Descripción" prefWidth="300.0" />
                                        <TableColumn fx:id="destinationPriceColumn" text="Precio" prefWidth="100.0" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="flightsTab" text="Vuelos">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 20;">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button text="Agregar Vuelo" onAction="#handleAddFlight" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                                        <Button text="Editar Vuelo" onAction="#handleEditFlight" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                                        <Button text="Eliminar Vuelo" onAction="#handleDeleteFlight" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                                    </children>
                                </HBox>
                                <TableView fx:id="flightsTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="flightIdColumn" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="flightOriginColumn" text="Origen" prefWidth="150.0" />
                                        <TableColumn fx:id="flightDestinationColumn" text="Destino" prefWidth="150.0" />
                                        <TableColumn fx:id="flightDateColumn" text="Fecha" prefWidth="150.0" />
                                        <TableColumn fx:id="flightPriceColumn" text="Precio" prefWidth="100.0" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="hotelsTab" text="Hoteles">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 20;">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button text="Agregar Hotel" onAction="#handleAddHotel" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                                        <Button text="Editar Hotel" onAction="#handleEditHotel" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                                        <Button text="Eliminar Hotel" onAction="#handleDeleteHotel" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                                    </children>
                                </HBox>
                                <TableView fx:id="hotelTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="hotelIdColumn" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="hotelNameColumn" text="Nombre" prefWidth="200.0" />
                                        <TableColumn fx:id="hotelLocationColumn" text="Ubicación" prefWidth="200.0" />
                                        <TableColumn fx:id="hotelPriceColumn" text="Precio/Noche" prefWidth="100.0" />
                                        <TableColumn fx:id="hotelStarsColumn" text="Estrellas" prefWidth="80.0" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="reservationsTab" text="Reservaciones">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 20;">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button text="Agregar Reservación" onAction="#handleAddReservation" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                                        <Button text="Editar Reservación" onAction="#handleEditReservation" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                                        <Button text="Eliminar Reservación" onAction="#handleDeleteReservation" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                                    </children>
                                </HBox>
                                <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="reservationIdColumn" text="ID" prefWidth="50.0" />
                                        <TableColumn fx:id="reservationUserColumn" text="Usuario" prefWidth="150.0" />
                                        <TableColumn fx:id="reservationDestinationColumn" text="Destino" prefWidth="150.0" />
                                        <TableColumn fx:id="reservationStartDateColumn" text="Fecha Inicio" prefWidth="120.0" />
                                        <TableColumn fx:id="reservationEndDateColumn" text="Fecha Fin" prefWidth="120.0" />
                                        <TableColumn fx:id="reservationStatusColumn" text="Estado" prefWidth="100.0" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
