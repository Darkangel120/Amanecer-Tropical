<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.DestinationDialogController">
    <headerText>Destination Details</headerText>
    <content>
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefRowCount="3" />

                <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Image URL:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="imageUrlField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Duration (Days):" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Includes:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextArea fx:id="includesField" GridPane.columnIndex="1" GridPane.rowIndex="7" prefRowCount="2" />

                <Label text="Itinerary:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <TextArea fx:id="itineraryField" GridPane.columnIndex="1" GridPane.rowIndex="8" prefRowCount="2" />
            </children>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>
