<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.ReservationDetailsController" stylesheets="@../css/desktop-styles.css" styleClass="dialog-pane">
   <header>
      <Label text="Detalles de Reservación" />
   </header>
   <content>
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <VBox spacing="15.0" prefWidth="500.0">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <!-- Basic Information -->
            <VBox spacing="10.0">
               <Label text="Información Básica" styleClass="section-header" />

               <GridPane hgap="10.0" vgap="5.0">
                  <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="idLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="clientLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Destino:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label fx:id="destinationLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Label fx:id="statusLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </GridPane>
            </VBox>

            <!-- Dates and Pricing -->
            <VBox spacing="10.0">
               <Label text="Fechas y Precios" styleClass="section-header" />

               <GridPane hgap="10.0" vgap="5.0">
                  <Label text="Fecha Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="startDateLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Fecha Fin:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="endDateLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Personas:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label fx:id="peopleCountLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="Precio Total:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Label fx:id="totalPriceLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </GridPane>
            </VBox>

            <!-- Services -->
            <VBox spacing="10.0">
               <Label text="Servicios Incluidos" styleClass="section-header" />

               <GridPane hgap="10.0" vgap="5.0">
                  <Label text="Paquete:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="packageLabel" text="Ninguno" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Vuelo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="flightLabel" text="Ninguno" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Hotel:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label fx:id="hotelLabel" text="Ninguno" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="Vehículo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Label fx:id="vehicleLabel" text="Ninguno" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </GridPane>
            </VBox>

            <!-- Notes -->
            <VBox spacing="10.0">
               <Label text="Notas" styleClass="section-header" />
               <Label fx:id="notesLabel" text="Sin notas" wrapText="true" />
            </VBox>

            <!-- Timestamps -->
            <VBox spacing="10.0">
               <Label text="Fechas del Sistema" styleClass="section-header" />

               <GridPane hgap="10.0" vgap="5.0">
                  <Label text="Creado:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="creationDateLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Actualizado:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="updateDateLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </GridPane>
            </VBox>
         </VBox>
      </ScrollPane>
   </content>
   <buttons>
      <Button text="Cerrar" ButtonBar.buttonData="CANCEL_CLOSE" onAction="#handleClose" styleClass="button secondary" />
   </buttons>
</DialogPane>
