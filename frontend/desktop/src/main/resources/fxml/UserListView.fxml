<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.UserListController" stylesheets="@../css/desktop-styles.css" spacing="20.0" styleClass="content-area">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Gestión de Usuarios" styleClass="form-title" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addButton" onAction="#handleAddUser" text="Agregar Usuario" styleClass="form-button" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" text="Actualizar" styleClass="form-button" />
         </children>
      </HBox>

      <HBox spacing="15.0" alignment="CENTER_LEFT">
         <children>
            <Label text="Buscar:" />
            <TextField fx:id="searchField" promptText="Nombre, email o cédula..." prefWidth="250.0" onKeyReleased="#handleSearch" />
            <ComboBox fx:id="roleFilter" promptText="Filtrar por rol" prefWidth="200.0" onAction="#handleRoleFilter" />
         </children>
      </HBox>

      <TableView fx:id="userTable" styleClass="table-view" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0" />
            <TableColumn fx:id="nameColumn" text="Nombre" prefWidth="200.0" />
            <TableColumn fx:id="emailColumn" text="Correo Electrónico" prefWidth="250.0" />
            <TableColumn fx:id="cedulaColumn" text="Cédula" prefWidth="120.0" />
            <TableColumn fx:id="telefonoColumn" text="Teléfono" prefWidth="150.0" />
            <TableColumn fx:id="roleColumn" text="Rol" prefWidth="100.0" />
            <TableColumn fx:id="statusColumn" text="Estado" prefWidth="100.0" />
            <TableColumn fx:id="actionsColumn" text="Acciones" prefWidth="300.0" />
         </columns>
      </TableView>

      <HBox spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Label fx:id="statusLabel" text="Cargando usuarios..." />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
