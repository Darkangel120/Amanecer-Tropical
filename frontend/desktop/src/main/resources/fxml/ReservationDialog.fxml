<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.ReservationDialogController">
    <headerText>Reservation Details</headerText>
    <content>
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="User:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="userComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Destination:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="destinationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Total Price:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="totalPriceField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextArea fx:id="notesField" GridPane.columnIndex="1" GridPane.rowIndex="6" prefRowCount="3" />
            </children>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>
