<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.FlightDialogController">
    <headerText>Flight Details</headerText>
    <content>
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Origin:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="originField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Destination:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="destinationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Departure Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="departureDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Arrival Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <DatePicker fx:id="arrivalDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Airline:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="airlineField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Flight Number:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="flightNumberField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Available Seats:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextField fx:id="availableSeatsField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </children>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>
