<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amanecertropical.desktop.controller.LoginController" alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f0f0;">
    <children>
        <Label text="Amanecer Tropical" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Label>

        <VBox alignment="CENTER_LEFT" spacing="10.0" maxWidth="300.0">
            <children>
                <Label text="Usuario:" />
                <TextField fx:id="usernameField" promptText="Ingrese su usuario" />

                <Label text="Contraseña:" />
                <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" />

                <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLogin" prefWidth="300.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

                <Label fx:id="errorLabel" textFill="RED" visible="false" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
